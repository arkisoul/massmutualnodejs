<%- include("includes/head") %>
<body>
    <%- include("includes/header") %>
    <main class="main">
      <div class="container">
        <div class="chat-window p-4">
          <h1>Chat Room</h1>
          <ul class="messages" id="messages"></ul>
          <form action="" method="post" id="chat" class="d-grid" style="--bs-rows: 2;">
            <div class="form-group mb-3">
              <label for="message">Your message</label><input type="text" class="form-control" name="message" id="message" placeholder="Type a message" autocomplete="off">
            </div>
            <div class="form-group d-grid">
              <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </main>
    <script src="/javascripts/main.js" defer></script>
    <%- include("includes/footer") %>
  </body>
</html>
